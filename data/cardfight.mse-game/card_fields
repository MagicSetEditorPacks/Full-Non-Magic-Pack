	position hint: 50
	description: The card's illustrator.

card field:
	type: text
	name: illus line
	save value: false
	show statistics: false
	card list visible: false
	script:
		if card.illustrator != "" then forward_editor(prefix: "ILLUST / ", field: card.illustrator)
		else forward_editor(prefix: "", field: card.illustrator)
	description: The card's illustrator.
	
############################### Card sorting / numbering
card field:
	type: text
	name: set code
	editable: false
	save value: false
	script: set.set_code + (if set.set_code == "" then "No. " else "/") + card_number() + set.set_language
	show statistics: false
	
card field:
	type: text
	name: card number
	save value: false
	script:	card_number()
	card list visible: true
	card list column: 7
	card list width: 9
	card list name: #
	card list alignment: right
	editable: false
	show statistics: false

