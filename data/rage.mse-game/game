	type: image
	name: image
	show statistics: false

card field:
	type: image
	name: tall image
	show statistics: false
	
############################# Type and layout
card field:
	type: text
	name: type
	show statistics: true
	card list visible: true
	default: card.cardtype
	editable: false
	save value: false
	card list column: 2
	description: The type of this card
	## Only used for card list.

