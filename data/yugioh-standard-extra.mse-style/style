			name: Palatino Linotype
			size: 8
			color: 
				script: if card.card_type=="dark synchro monster" then rgb(255,255,255)
				else if card.card_type=="demon monster" then rgb(255,255,255)
				else if styling.text_color=="white" then rgb(255,255,255)
				else rgb(0,0,0)
	edition:
